<p id="notice" class="alert alert-info"><%= notice %></p>

<div class="container image">
  <div class="row">
    <div class="col-sm-8 col-lg-6">        

        <p class="thumbnail">
      
        <%= image_tag @product.image_url unless @product.image_url.nil? %>
        </p>
    </div><!--end of col-->
    
    <div class=" col-sm-2 col-lg-4">
        <p>
        <strong>Name:</strong><%= @product.name %>
        </p>
      
        <strong> Description:</strong><%=@product.description %>
        
        <p><strong>Image_url:</strong></p>

          <strong>Color:</strong><%= @product.color %>
          
          <strong>Price:</strong><%= @product.price %>
        
          
    </div><!--end of col-->    
  </div><!--end of row-->

  <div class="row">
    
      <form class="comment">
        <% if signed_in? %>
        <h4>Add a review:</h4>
        <%= form_for([@product, @product.comments.build]) do |f| %>
        <p>
        <%= f.label :body, "Comments" %><br>
        <%= f.text_area :body, class: "form-control" %>
        </p>

        <p>
        <div class="rating"></div>
        </p>  
        
        <p>
        <%= submit_tag("Submit", class: "btn btn-default btn-primary btn-sm")  %>
        </p>
      <% end %>
    <% end %>
    </div><!--endof form-group-->
    </div><!--end of col-lg-6-->
  </div><!--end of container image-->

<div class="product-reviews">
    <% @comments.each do |comment| %>
        <div class="row">
            <hr>
            <p><%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
            <p><%= "Rating: #{comment.rating}/5" %></p>
            <p><%= comment.body %></p>
        </div>
    <% end %>
</div>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
