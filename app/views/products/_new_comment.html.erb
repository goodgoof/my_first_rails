  <div class="row">
  <% if signed_in? %>
    <h4>Add a review:</h4>

            <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
            <%= f.label :body, "Comments" %><br>
            <%= f.text_area :body, class: "form-control" %>

            <p>
              <div class="rating"></div>
            </p>

            <%= f.submit("Submit", class: "btn btn-default btn-primary btn-sm")  %>
            <% end %>
    <% end %>





